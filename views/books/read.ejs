<div class="my-5">
  <h1 class="text-center mb-5">도서정보</h1>
  <div class="text-end">
    <a href="/books/update?bid=<%=book.bid%>" class="btn btn-primary"
      >정보수정</a
    >
  </div>
  <div class="card p-3 row m-2">
    <div class="row">
      <div class="col-md-3 my-3">
        <img
          id="image"
          src="http://via.placeholder.com/170x200"
          width="100%"
          style="cursor: pointer"
        />
        <input
          id="file"
          type="file"
          class="form-control"
          style="display: none"
        />
        <button id="upload" class="btn btn-primary w-100 mt-2">
          이미지저장
        </button>
      </div>
      <div class="col">
        <h5 class="my-3">코드: <%=book.bid%></h5>
        <h5 class="my-3">제목: <%=book.title%></h5>
        <h5 class="mb-3">가격: <%=book.fmtprice%>원</h5>
        <h5 class="mb-3">저자: <%=book.authors%></h5>
        <h5 class="mb-3">출판사: <%=book.publisher%></h5>
        <h5 class="mb-3">ISBN: <%=book.isbn%></h5>
        <h5 class="mb-3">등록일: <%=book.fmtdate%></h5>
      </div>
    </div>
    <hr />
    <div><%=book.contents%></div>
  </div>
</div>
<script>
  const image = "<%=book.image%>";
  if (image) $("#image").attr("src", image);

  //이미지저장 버튼을 클릭한 경우
  $("#upload").on("click", function () {
    if ($("#file").val() == "") {
      alert("변경할 이미지를 선택하세요!");
      return;
    }
    if (!confirm("이미지를 변경하실래요?")) return;
    const formData = new FormData();
    formData.append("bid", "<%=book.bid%>");
    formData.append("file", $("#file")[0].files[0]);
    $.ajax({
      type: "post",
      url: "/books/upload",
      data: formData,
      processData: false,
      contentType: false,
      success: function () {
        alert("이미지가 변경되었습니다.");
      },
    });
  });

  //파일이 변경된 경우
  $("#file").on("change", function (e) {
    $("#image").attr("src", URL.createObjectURL(e.target.files[0]));
  });

  //이미지를 클릭한 경우
  $("#image").on("click", function () {
    $("#file").click();
  });
</script>
