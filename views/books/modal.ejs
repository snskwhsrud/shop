<!-- Modal -->
<div
  class="modal fade"
  id="modal{{@index}}"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">도서정보</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-4">
            <img src="{{isImage thumbnail}}" width="100%" />
          </div>
          <div class="col">
            <h5 class="mb-3 mt-4">제목:{{ title }}</h5>
            <h5 class="mb-3">저자:{{ authors }}</h5>
            <h5 class="mb-3">가격:{{fmtPrice price}}</h5>
            <h5 class="mb-3">출판사:{{ publisher }}</h5>
            <h5 class="mb-3">출판일:{{ datetime }}</h5>
            <h5 class="mb-3">ISBN:{{ isbn }}</h5>
          </div>
        </div>
        <hr />
        <div>{{ contents }}</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
